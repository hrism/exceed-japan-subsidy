---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <!-- TODO: WordPressから以下を移植
      - Google Tag Manager (GTM)
      - Google Analytics
      - その他トラッキングタグ
      - OGP / SNSメタタグ
      - favicon
    -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- 本体サイトのテーマCSS -->
    <link rel="stylesheet" href="/wp-content/themes/exceed-custom-theme/css/reset.css">
    <link rel="stylesheet" href="/wp-content/themes/exceed-custom-theme/css/custom-style.css">
  </head>
  <body class="font-sans text-gray-800 leading-relaxed">
    <slot />
  </body>
</html>
