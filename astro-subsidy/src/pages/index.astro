  <script>
    // CTA section animation with Intersection Observer
    const ctaSection = document.getElementById('cta-section');
    const ctaElements = document.querySelectorAll('.cta-animate');
    const ctaNumber = document.querySelector('.cta-number');

    const ctaObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Stagger animations
          ctaElements.forEach((el, index) => {
            setTimeout(() => {
              el.classList.add('animate-in');
            }, index * 150);
          });
          // Number bounce
          setTimeout(() => {
            if (ctaNumber) ctaNumber.classList.add('animate-in');
          }, 300);
          // Unobserve after animation
          ctaObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });

    if (ctaSection) {
      ctaObserver.observe(ctaSection);
    }
  </script>

