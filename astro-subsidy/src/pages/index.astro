  <script>
    // CTA animation helper
    function animateCtaSection(section: Element) {
      const elements = section.querySelectorAll('.cta-animate');
      const number = section.querySelector('.cta-number');

      elements.forEach((el, index) => {
        setTimeout(() => {
          el.classList.add('animate-in');
        }, index * 150);
      });
      setTimeout(() => {
        if (number) number.classList.add('animate-in');
      }, 300);
    }

    // Top CTA: delay until hero animation completes (~3000ms)
    const topCta = document.getElementById('cta-section-top');
    if (topCta) {
      setTimeout(() => {
        animateCtaSection(topCta);
      }, 3000);
    }

    // Other CTA sections: use Intersection Observer
    const otherCtaSections = document.querySelectorAll('.cta-section:not(#cta-section-top)');

    const ctaObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCtaSection(entry.target);
          ctaObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });

    otherCtaSections.forEach(section => {
      ctaObserver.observe(section);
    });
  </script>

